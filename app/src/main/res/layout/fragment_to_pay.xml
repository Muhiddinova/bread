<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ToPayFragment">

    <TextView
        android:id="@+id/tx_payme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Toâ€˜lov turini tanlang"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        />

    <LinearLayout

        android:gravity="center"
        android:id="@+id/line_naqt"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:background="@drawable/bg_btn_tab"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_payme">

        <TextView
            android:fontFamily="@font/poppins_regular"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:text="Naqd pul"
            android:textAllCaps="false" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="16sp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="16sp"
            android:src="@drawable/ic_naqt" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/line_payme"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="16sp"
        android:background="@drawable/bg_btn_tab"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_payme">

        <TextView
            android:fontFamily="@font/poppins_regular"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:text="Payme"
            android:textAllCaps="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28sp"
            android:layout_marginTop="16sp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="16sp"
            android:src="@drawable/ic_payme" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_naqt">

        <TextView
            android:textSize="15sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summa:"
            android:textAllCaps="false" />

        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="16sp"
            android:text="3500 so'm" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>