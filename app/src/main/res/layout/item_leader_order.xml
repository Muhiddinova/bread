<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="bread"
            type="com.example.asqarnon.main.model.BreadModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/line_1"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tx_name_shop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Baraka market"
                android:layout_weight="1"
                android:textColor="@color/black_600"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_regular"
                />
            <TextView
                android:id="@+id/tx_name_bread"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Yopgan non"
                android:layout_weight="1"
                android:textColor="@color/black_600"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_regular"
                />
            <TextView
                android:id="@+id/tx_count"
                android:layout_width="0dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_weight="1"
                android:textColor="@color/black_600"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_regular"
                />
            <TextView
                android:id="@+id/tx_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2.05.2022"
                android:layout_weight="1"
                android:textColor="@color/black_600"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_regular"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_accepted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button.TextButton"
            android:text="Buyurtmani tasdiqlash"
            android:textColor="@color/Primary_400"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/line_1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_100"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/btn_accepted"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>