<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tx_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Bugun 2.05.2022"
        android:textColor="@color/black_600"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tx_date">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="@drawable/stroke_edittext"
            app:cardCornerRadius="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_img"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/leader1" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tx_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Kunlik buyurtmalar"
                    android:textColor="@color/black_600"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@id/cv_img"
                    app:layout_constraintTop_toTopOf="@id/cv_img" />

                <TextView
                    android:id="@+id/tx_count_orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="10 ta"
                    android:textColor="@color/black_800"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toRightOf="@id/cv_img"
                    app:layout_constraintTop_toBottomOf="@id/tx_1" />

                <TextView
                    android:id="@+id/tx_count_bread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="700 ta non"
                    android:textColor="@color/black_800"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toRightOf="@id/cv_img"
                    app:layout_constraintTop_toBottomOf="@id/tx_count_orders" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_next"
                    app:layout_constraintLeft_toRightOf="@id/cv_img"
                    app:layout_constraintTop_toBottomOf="@id/tx_count_bread" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="@drawable/stroke_edittext"
            app:cardCornerRadius="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_img1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/leader2" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tx_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Kunlik kirim"
                    android:textColor="@color/black_600"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@id/cv_img1"
                    app:layout_constraintTop_toTopOf="@id/cv_img1" />

                <TextView
                    android:id="@+id/tx_income_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="25 000 000 so'm"
                    android:textColor="@color/black_800"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toRightOf="@id/cv_img1"
                    app:layout_constraintTop_toBottomOf="@id/tx_2" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_next"
                    app:layout_constraintBottom_toBottomOf="@id/cv_img1"
                    app:layout_constraintLeft_toRightOf="@id/cv_img1" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="@drawable/stroke_edittext"
            app:cardCornerRadius="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_img2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/leader3" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tx_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Kunlik berilgan qarz"
                    android:textColor="@color/black_600"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@id/cv_img2"
                    app:layout_constraintTop_toTopOf="@id/cv_img2" />

                <TextView
                    android:id="@+id/tx_debt_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="25 000 000 so'm"
                    android:textColor="@color/black_800"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toRightOf="@id/cv_img2"
                    app:layout_constraintTop_toBottomOf="@id/tx_3" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_next"
                    app:layout_constraintBottom_toBottomOf="@id/cv_img2"
                    app:layout_constraintLeft_toRightOf="@id/cv_img2" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>