<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:background="@drawable/stroke_item_notification">

    <TextView
        android:id="@+id/tx_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.05.2022 10.55"
        android:textSize="10sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black_600"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_800"
        android:fontFamily="@font/poppins_regular"
        android:text="Buyurtmangiz qabul qilindi"
        app:layout_constraintTop_toBottomOf="@id/tx_date"
        android:layout_marginTop="8dp"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:id="@+id/tx_status"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_600"
        android:fontFamily="@font/poppins_regular"
        android:text="Tez orada buyurtmangiz manzilga yetib boradi"
        app:layout_constraintTop_toBottomOf="@id/tx_status"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:textSize="12dp"
        android:id="@+id/tx_description"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/tx_money"
        android:text="250 000"
        android:textColor="@color/black_800"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@id/tx_som"
        app:layout_constraintRight_toLeftOf="@id/tx_som"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/tx_som"
        android:text="so\'m"
        android:textColor="@color/black_800"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintTop_toBottomOf="@id/tx_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_600"
        android:fontFamily="@font/poppins_regular"
        android:text="Patir non, 100 ta"
        app:layout_constraintBottom_toBottomOf="@id/tx_som"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:textSize="12dp"
        android:id="@+id/tx_name_and_count"
        />

</androidx.constraintlayout.widget.ConstraintLayout>